    <script>
        feather.replace();
        
        VANTA.WAVES({
            el: "#vanta-bg",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00,
            color: 0x1a1a1a,
            shininess: 0.00,
            waveHeight: 20.00,
            waveSpeed: 0.25,
            zoom: 0.65
        });
        
        // Add flashing effect to warning periodically
        setInterval(() => {
            const warning = document.querySelector('.warning-flash');
            warning.classList.add('animate-pulse');
            setTimeout(() => {
                warning.classList.remove('animate-pulse');
            }, 1000);
        }, 5000);
    </script>
